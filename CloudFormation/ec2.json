{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
      "VpcId": {
        "Type": "String",
        "Description": "ID of VPC"
      },
      
      "PubSubnet1Id": {
        "Type": "String",
        "Description": "ID of Subnet"
      },
      
      "PubSubnet2Id": {
        "Type": "String",
        "Description": "ID of Subnet"
      },
      
      "PrivSubnet1Id": {
        "Type": "String",
        "Description": "ID of Subnet"
      },
      
      "PrivSubnet2Id" : {
        "Type" : "String",
        "Description" : "ID of Subnet"
      },

      "InstanceType": {
        "Type": "String",
        "Description": "Type of instance",
        "Default": "t2.micro"
      },

      "AmiId": {
        "Type": "String",
        "Description": "ID of AMI"
      },

      "SecurityGroup": {
        "Type": "String",
        "Description": "ID of SecurityGroup"
      },

      "ELBSecurityGroup": {
        "Type": "String",
        "Description": "ID of SecurityGroup for ELB"
      },

      "SSHKey": {
        "Type": "String",
        "Description": "SSH key name"
      },

      "InstanceProf": {
        "Type": "String",
        "Description": "Id of the instance profile to apply to EC2 instances"
      },

      "Priv1AZ" : {
        "Type": "String",
        "Description": "AZ for Priv1"
      },
      
      "Priv2AZ" : {
        "Type": "String",
        "Description": "AZ for Priv1"
      },
      

      "AZ": {
        "Type": "String",
        "Description": "AZ for EC2 instances"
      }

    },


    "Mappings" : {
      "AWSRegionArch2AMI" : {
        "us-east-1"      : { "64" : "ami-8c1be5f6" },
        "us-east-2"      : { "64" : "ami-c5062ba0" },
        "us-west-1"      : { "64" : "ami-02eada62" },
        "us-west-2"      : { "64" : "ami-9fa343e7" }
      }
    },



    "Resources": {

      "BastionHost" : {
        "Type" : "AWS::EC2::Instance",
        "Properties" : {
           "ImageId" : { "Ref" : "AmiId" },
           "KeyName" : { "Ref" : "SSHKey" },
           "InstanceType" : {"Ref":"InstanceType"},
           "SubnetId" : {"Ref" : "PubSubnet1Id"},
           "Tags": [
            {
                "Key": "Name",
                "Value": "BastionHost"
            }
         ]
        }
     }, 
     
     
      "LaunchConfig": {
        "Type" : "AWS::AutoScaling::LaunchConfiguration",
        "Properties" : {
           "AssociatePublicIpAddress" : "True",
           "BlockDeviceMappings" : [],
           "IamInstanceProfile" : {"Ref":"InstanceProf"},
          "ImageId" : { "Ref" : "AmiId" },
           "InstanceMonitoring" : "False",
           "InstanceType" : {"Ref":"InstanceType"},
           "KeyName" : {"Ref":"SSHKey"},
           "SecurityGroups" : [{"Ref":"SecurityGroup"}],
           "UserData": {
             "Fn::Base64":{"Fn::Join":["",[
               "#!/bin/bash\n",
               "yum update && yum upgrade\n",
               "yum -y install nginx git\n",
               "service nginx restart\n",
               "pip install ansible"
             ]]}
           }
         }
        },

      "ASGroup": {
         "Type" : "AWS::AutoScaling::AutoScalingGroup",
         "Properties" : {
            "AvailabilityZones" : [{"Ref":"Priv1AZ"},{"Ref":"Priv2AZ"}],
            "Cooldown" : "600",
            "DesiredCapacity" : "2",
            "HealthCheckType" : "ELB",
            "HealthCheckGracePeriod": "180",
            "LaunchConfigurationName" : {"Ref":"LaunchConfig"},
            "LoadBalancerNames" : [{"Ref":"ELB"}],
            "MaxSize" : "10",
            "MinSize" : "2",
            "Tags" : [
              {
                "Key": "Name",
                "Value": {"Fn::Sub": "${AWS::StackName}-ASG"},
                "PropagateAtLaunch": "True"
              }
            ],
            "VPCZoneIdentifier" : [
              {"Ref" : "PrivSubnet1Id"},
              {"Ref" : "PrivSubnet2Id"}]
         }
      }, 

      "ELB": {
         "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
         "Properties": {
            "AppCookieStickinessPolicy" : [
              {
                 "CookieName" : "ELBStickness",
                 "PolicyName" : "Test-ELB-Policy"
              }
            ],
            "ConnectionSettings" : {
              "IdleTimeout" : "60"
            },
            "CrossZone" : "False",
            "HealthCheck" : {
               "HealthyThreshold" : "5",
               "Interval" : "10",
               "Target" : "HTTP:80/",
               "Timeout" : "5",
               "UnhealthyThreshold" : "5"
            },            
            "LoadBalancerName" : "Application-ELB",
            "Listeners" : [
              {
                "InstancePort" : "80",
                "InstanceProtocol" : "HTTP",
                "LoadBalancerPort" : "80",
                "Protocol" : "HTTP"
              }
            ],
            "Policies" : [],
            "Scheme" : "",
            "SecurityGroups" : [{"Ref":"ELBSecurityGroup"}],
            "Subnets" : [
              { "Ref":"PubSubnet1Id" },
              { "Ref":"PubSubnet2Id" }
            ]
         }
      }   
    },
    "Outputs": {
        "ELBPublicIP": {
          "Description": "Public IP of the EC2 instance.",
          "Value": {"Fn::GetAtt":["ELB", "DNSName"]}
        },

        "SiteURL": {
          "Description": "URL of the site.",
          "Value": {
            "Fn::Join":["/",
              ["http:/",{"Fn::GetAtt":["ELB", "DNSName"]}]]
          }
        }
      }         
}